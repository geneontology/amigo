[% IF TERM_INFO.name %]

<div class="contents term">
  <h1 class="name">[% TERM_INFO.name %]</h1>
  
  <ul id="navPage" class="inline C">
    [% IF TERM_INFO.is_obsolete == 'true' %]
    <li><a href="#info" title="View obsolete term information">(Obsolete) Term information <img src="[% image_dir %]/down.png" alt="Obsolete term information link"></a></li>
    [% ELSE %]
    <li><a href="#info" title="View term information">Term information <img src="[% image_dir %]/down.png" alt="Term information link"></a></li>
    <li><a href="#lineage" title="View the placement of the term in the tree">Term neighborhood <img src="[% image_dir %]/down.png" alt="Term neighborhood link"></a></li>
    <li><a href="#xrefs" title="View cross-references to external databases">External references <img src="[% image_dir %]/down.png" alt="External references link"></a></li>
    <li>
      [% IF GENE_PRODUCT_ASSOCIATIONS_LINK || ( GENE_PRODUCT_ASSOCIATIONS_COUNT && GENE_PRODUCT_ASSOCIATIONS_COUNT == 0 ) %]
      <a href="[% GENE_PRODUCT_ASSOCIATIONS_LINK %]"
	 title="View gene products associated with this term">
	[%    IF GENE_PRODUCT_ASSOCIATIONS_COUNT %]
	[%       IF GENE_PRODUCT_ASSOCIATIONS_COUNT == 1 %]
	1 gene product association
	[%       ELSE %]
	[% GENE_PRODUCT_ASSOCIATIONS_COUNT %] gene product associations
	[%       END %]
	[%    ELSE %]
	Gene product associations
	[%    END %]
	<img src="[% image_dir %]/left.png" alt="link to another page" />
      </a>
      [% END %]
    </li>
    [% END %]
    <!-- gp_assoc_text = TERM_INFO.n_deep_products _ ' gene product association'; -->
    <!-- IF TERM_INFO.n_deep_products != 1; -->
