  </ul>

  [% IF TERM_INFO.is_obsolete == 'true' %]
  <!-- <div class="block warning" id="info"> -->
  <div class="block obsolete" id="info">
    <h2>(Obsolete) Term Information</h2>
  [% ELSE %]
  <div class="block" id="info">
    <h2>Term Information</h2>
  [% END %]

    <dl class="term-info">

      <!-- Acc and ont. -->
      <dt>Accession</dt>
      <dd class="acc">[% TERM_INFO.acc %]</dd>
      <dt>Ontology</dt>
      <dd class="type">[% TERM_INFO.ontology_readable %]</dd>
      
      <!-- Synonyms -->
      <dt>Synonyms</dt>
      [% al = TERM_INFO.alternate_ids %]
      [% sl = TERM_INFO.synonyms %]
      [% IF sl.size == 0 AND al.size == 0 %]
      <dd>None</dd>
      [% ELSE %]
      [%    FOREACH alth IN al %]
      <dd class="syn"><b>alt. id</b>: [% alth %]</dd>
      [%    END %]
      [%    FOREACH synh IN sl %]
      <!-- BUG/TODO: Like this when we have scope available. -->
      <!-- <dd class="syn">[% IF synh.scope %]<span class="type">[% synh.scope %]</span>: [% END %][% synh.acc %]</dd> -->
      <dd class="syn"><b>scopeless label</b>: [% synh %]</dd>
      [%    END %]
      [% END %]

      <!-- Definition -->
      <dt>Definition</dt>
      [% IF TERM_INFO.definition %]
      <dd class="def">[% TERM_INFO.definition %]
	[% IF TERM_INFO.term_dbxrefs && TERM_INFO.term_dbxrefs.size > 0 %]
	<br /><i>Source:</i>
	[%    txref_count = TERM_INFO.term_dbxrefs.size %]
	[%    txref_counter = 1 %]
	[%    FOREACH txref = TERM_INFO.term_dbxrefs %]
	[% #      href = txref.link %]
	[% #      vis = txref.id %]
	[% #      IF txref.dbname == "URL" %]
	[% #         href = txref.key %]
	[% #         vis = txref.key %]
	[% #      END %]
	[% #   IF  txref.dbname == 'PMID' || txref.dbname == 'DOI' %]
	[%    IF  txref.search('PMID') || txref.search('DOI') %]
	<cite class="paper">[% ELSE %]<cite>[% END %][% IF txref.link %]<a title="Go to [% vis %]" href="[% txref.link %]">[% vis %]</a>[% ELSE %][% txref %][% END %]</cite>[% IF txref_counter < txref_count; txref_counter = txref_counter + 1 %],[% END %]
       [%    END %]
       [% ELSE %]
       [source: unknown]
       [% END %]
     </dd>
     [% ELSE %]
     <dd>None</dd>
     [% END %]

     <!-- Comment. -->
     <dt>Comment</dt>
     [% IF TERM_INFO.comment %]
     <dd class="comment">[% TERM_INFO.comment %]</dd>
     [% ELSE %]
     <!-- <dd>None</dd> -->
     <dd>TODO</dd>
     [% END %]
     [%	IF TERM_INFO.is_obsolete == 'true' %]
     [%    IF TERM_INFO.replaced_by_list %]
      <dd>Replaced by
	[%    FOREACH t = TERM_INFO.replaced_by_list %]
	<a href="term_details?term=[% t.acc %]&amp;session_id=[% session_id %]">[% t.acc %] : [% t.name %]</a>
       [%     END %]
      </dd>
      [%   END %]
      [%   IF TERM_INFO.consider_list %]
      <dd>Consider
	[%    FOREACH t = TERM_INFO.consider_list %]
	<a href="term_details?term=[% t.acc %]&amp;session_id=[% session_id %]">[% t.acc %] : [% t.name %]</a>
       [%     END %]
      </dd>
      [%   END %]
     [% END %]

     <!-- Subsets -->
     <dt>Subset</dt>
     [% IF TERM_INFO.subsets.size != 0 %]
     <dd><ul class="subset">
	 [% FOREACH sub = TERM_INFO.subsets %]
	 [% #   TODO/BUG: need more info through for links %]	 
	 [% #   IF sub.search('goslim') %]
	 <!-- <li><a href="[% sub.link %]" title="View details of the [% sub.name %] GO slim">[% sub.name %]</a></li> -->
	 [% #   ELSE %]
	 <!-- <li>Unavailable</li> -->
	 <li>[% sub %]</li>
	 [% #   END %]
	 [% END %]
     </ul></dd>
     [% ELSE %]
     <dd>None</dd>
     [% END %]
     
     [% INCLUDE common/term_details_gonuts.tmpl %]

   </dl>

   <p class="toTop">
     <a href="#top" title="Back to the top of the page">Back to top</a> 
   </p>
